{
  "name": "mcp-e2e-tests",
  "version": "1.0.0",
  "description": "E2E testing framework for Kansofy MCP server",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:oauth": "vitest run tests/oauth/",
    "test:matrix": "vitest run tests/rbac/tool-matrix.test.ts",
    "test:data-access": "vitest run tests/rbac/data-access.test.ts",
    "test:workflows": "vitest run tests/workflows/",
    "test:all": "vitest run --reporter=verbose",
    "test:json": "vitest run --reporter=json --outputFile=recordings/test-results.json"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
